{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "es2015"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,

        "forceConsistentCasingInFileNames": true,
        
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,

        "outDir": "./dist/",
        "sourceMap": true,
        "module": "es6",

        "jsx": "react",


        "module": "esnext",
        "moduleResolution": "node",
    },
    "include": [
        "src"
    ]
}
